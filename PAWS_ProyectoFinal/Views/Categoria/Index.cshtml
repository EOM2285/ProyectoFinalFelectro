@model IEnumerable<PAWS_ProyectoFinal.Models.Categoria>



<div class="container">
    <p>
        <a asp-action="Create"><img src="~/imagenes/logos/cards add.png" hight="50" width="50" /></a>
    </p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreCategoria)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCategoria)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="edit">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="details">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


