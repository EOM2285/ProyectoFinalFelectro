@model IEnumerable<PAWS_ProyectoFinal.Models.Categoria>




<div class="container ">
    <div class="table-responsive d-flex justify-content-center">
        <div class="table-wrapper col-sm-6 ">

            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Usuarios</h2>
                    </div>
                    <div class="col-sm-6">
                        <a asp-action="Create" class="btn btn-success"><span class="material-symbols-outlined">add_circle</span><span>Categoría</span></a>
                    </div>
                </div>
            </div>

            <table class="table table-striped table-hover display" id="myTable">
                <thead>
                    <tr >
                        <th style="text-align:center;">
                            @Html.DisplayNameFor(model => model.NombreCategoria)
                        </th>
                        <th style="text-align:center;"> Función</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NombreCategoria)</td>
                            <td class="d-flex justify-content-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="edit"><span class="material-symbols-outlined">edit</span></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="details"><span class="material-symbols-outlined">visibility</span></a>                               
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
