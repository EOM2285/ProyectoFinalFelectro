                        </output>
                    </div>

                    <div class="form-group col-md-6">
                        <label>
                            @Html.DisplayNameFor(model => model.NombreCliente)
                        </label>
                        <output class="form-control">
                            @Html.DisplayFor(model => model.NombreCliente)
                        </output>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-6">
                        <label>
                            @Html.DisplayNameFor(model => model.CorreoCliente)
