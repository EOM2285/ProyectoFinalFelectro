                        </output>
                    </div>

                    <div class="form-group col-md-6">
                        <label>
                            @Html.DisplayNameFor(model => model.MontoPago)
                        </label>
                        <output class="form-control">
                            ¢ @formato(Model.MontoPago.ToString())
