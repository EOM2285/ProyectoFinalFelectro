<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] FELECTRO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/main2.css" rel="stylesheet" />
    <link href="~/css/misEstilos.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link href="~/css/card.css" rel="stylesheet" />
    <link href="~/css/createindex.css" rel="stylesheet" />
	<link href="~/css/carrito.css" rel="stylesheet" />
</head>
<body style="background-color: white">
    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between" style="align-items:center; justify-content:space-between">
            <h1 class="logo"><a asp-controller="Home" asp-action="Index">Felectro<span>.</span></a></h1>

            <nav id="navbar" class="navbar">
                <ul>
                    @if (Context.Session.GetString("Roll") == "1")
                    {
                        <li><a class="nav-link scrollto" asp-area=" " asp-controller="Home" asp-action="Index">Página Principal</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Carrito" asp-action="Index"><span class="material-symbols-outlined">shopping_cart</span></a></li>
                    }

                    @if (Context.Session.GetString("Roll") == "2")
                    {
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Carrito" asp-action="Index"><span class="material-symbols-outlined">shopping_cart</span></a></li>
                        <li><a class="nav-link scrollto" asp-area=" " asp-controller="Usuario" asp-action="Index">Usuario</a></li>
                        <li><a class="nav-link scrollto" asp-area=" " asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Categoria" asp-action="Index">Categorias</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Producto" asp-action="Index">Productos</a></li>
                        <li class="nav-item dropdown" style="justify-content:center">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="justify-content:center">
                               Pedidos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="nav-link scrollto" asp-area="" asp-controller="Venta" asp-action="FactPendiente">Pendientes</a></li>
                                <li><a class="nav-link scrollto" asp-area="" asp-controller="Venta" asp-action="FactProceso">En Proceso</a></li>
                                <li><a class="nav-link scrollto" asp-area="" asp-controller="Venta" asp-action="FactParaEntrega">Para Entrega</a></li>
                            </ul>
                        </li>
                    }

                    <li class="nav-item dropdown" style="justify-content:center">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="justify-content:center">
                            <h6 class="form-control fondo-marca">@Context.Session.GetString("nombre") @Context.Session.GetString("apellido")</h6>
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li><a class="dropdown-item" href="#">Another action</a></li>
                            <li><a asp-controller="InicioSesion" asp-action="Index">Cerrar Sesion</a></li>
                        </ul>
                    </li>
                </ul>


            </nav>
            <i class="bi bi-list mobile-nav-toggle align-items-center ">
                <img src="~/imagenes/logos/menu_01.png" width="30" height="30" />
            </i>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>




    <script src="~/js/main2.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="~/js/createindex.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });

        var table = new DataTable('#myTable', {
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-MX.json',
            },
        });
    </script>

    


    @await RenderSectionAsync("Scripts", required: false)

  
       

</body>
</html>


